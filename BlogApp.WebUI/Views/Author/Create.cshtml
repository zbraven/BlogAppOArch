@model Author

@{
    ViewBag.Title = "ss";
}

<form asp-action="Create" asp-controller="Author" enctype="multipart/form-data" method="post">

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0">Adı Soyadı</label>
        <div class="col-sm-10">
            <input asp-for="Fullname" class="form-control" placeholder="Kategori Adı" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0">E-Posta</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Kategori Adı" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0">Telefon</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Kategori Adı" />
        </div>
    </div>

    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0">Aktif Mi?</label>
        <div class="col-sm-10 form-check form-switch">
            @Html.CheckBoxFor(a => a.IsActive, new { @class = "form-check-input" })
        </div>
    </div>
   
    <div class="form-group mb-3 row">
        <label class="control-label text-md-right col-sm-2 m-0"></label>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Ekle</button>
        </div>
    </div>
</form>